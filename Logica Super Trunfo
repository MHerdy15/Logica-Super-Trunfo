import random

# Lista de cartas
cartas = [
    {"nome": "DragÃ£o", "forÃ§a": 90, "velocidade": 60, "magia": 70},
    {"nome": "FÃªnix", "forÃ§a": 75, "velocidade": 80, "magia": 95},
    {"nome": "Golem", "forÃ§a": 85, "velocidade": 40, "magia": 30},
    {"nome": "Grifo", "forÃ§a": 80, "velocidade": 70, "magia": 60},
    {"nome": "UnicÃ³rnio", "forÃ§a": 60, "velocidade": 75, "magia": 90},
    {"nome": "Minotauro", "forÃ§a": 88, "velocidade": 50, "magia": 40},
    {"nome": "Hidra", "forÃ§a": 92, "velocidade": 55, "magia": 65},
    {"nome": "Quimera", "forÃ§a": 78, "velocidade": 65, "magia": 55}
]

# Embaralha e divide cartas
random.shuffle(cartas)
meio = len(cartas) // 2
mao_jogador = cartas[:meio]
mao_computador = cartas[meio:]

# FunÃ§Ã£o para mostrar carta
def mostrar_carta(carta):
    print(f"\nCarta: {carta['nome']}")
    print(f"ForÃ§a: {carta['forÃ§a']}")
    print(f"Velocidade: {carta['velocidade']}")
    print(f"Magia: {carta['magia']}")

# Inicializa placar
pontos_jogador = 0
pontos_computador = 0
rodada = 1

print("=== SUPER TRUNFO - BATALHA DE CARTAS ===\n")

# Loop de rodadas
while mao_jogador and mao_computador:
    print(f"\nğŸ” Rodada {rodada}")
    carta_jogador = mao_jogador.pop(0)
    carta_computador = mao_computador.pop(0)

    print("\nSua carta Ã©:")
    mostrar_carta(carta_jogador)

    # Escolha de atributo
    atributo = input("\nEscolha um atributo (forÃ§a, velocidade, magia): ").lower()
    while atributo not in ["forÃ§a", "velocidade", "magia"]:
        atributo = input("Atributo invÃ¡lido. Escolha (forÃ§a, velocidade, magia): ").lower()

    valor_jogador = carta_jogador[atributo]
    valor_computador = carta_computador[atributo]

    print("\nCarta do computador:")
    mostrar_carta(carta_computador)

    print(f"\nVocÃª escolheu: {atributo.upper()}")
    print(f"Seu valor: {valor_jogador}")
    print(f"Valor do computador: {valor_computador}")

    # Resultado da rodada
    if valor_jogador > valor_computador:
        print("ğŸ‰ VocÃª venceu a rodada!")
        pontos_jogador += 1
    elif valor_jogador < valor_computador:
        print("ğŸ’¥ O computador venceu a rodada!")
        pontos_computador += 1
    else:
        print("âš”ï¸ Empate na rodada!")

    print(f"\nPlacar parcial -> VocÃª: {pontos_jogador} | Computador: {pontos_computador}")
    rodada += 1

# Resultado final
print("\n=== FIM DO JOGO ===")
print(f"\nğŸ Placar final -> VocÃª: {pontos_jogador} | Computador: {pontos_computador}")

if pontos_jogador > pontos_computador:
    print("ğŸ† ParabÃ©ns! VocÃª venceu o jogo!")
elif pontos_jogador < pontos_computador:
    print("ğŸ¤– O computador venceu o jogo. Boa sorte na prÃ³xima!")
else:
    print("âš–ï¸ O jogo terminou empatado!")

print("\nObrigado por jogar Super Trunfo!")
