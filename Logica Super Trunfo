import random

# DefiniÃ§Ã£o de cartas
cartas = [
    {"nome": "DragÃ£o", "forÃ§a": 90, "velocidade": 60, "magia": 70},
    {"nome": "FÃªnix", "forÃ§a": 75, "velocidade": 80, "magia": 95},
    {"nome": "Golem", "forÃ§a": 85, "velocidade": 40, "magia": 30},
    {"nome": "Grifo", "forÃ§a": 80, "velocidade": 70, "magia": 60},
    {"nome": "UnicÃ³rnio", "forÃ§a": 60, "velocidade": 75, "magia": 90}
]

# FunÃ§Ã£o para sortear carta aleatÃ³ria
def sortear_carta():
    return random.choice(cartas)

# FunÃ§Ã£o para mostrar atributos
def mostrar_carta(carta):
    print(f"\nCarta: {carta['nome']}")
    print(f"ForÃ§a: {carta['forÃ§a']}")
    print(f"Velocidade: {carta['velocidade']}")
    print(f"Magia: {carta['magia']}")

# InÃ­cio do jogo
print("=== Super Trunfo - Batalha de Cartas ===")

# Sorteio das cartas
carta_jogador = sortear_carta()
carta_computador = sortear_carta()

# Evita cartas repetidas
while carta_computador == carta_jogador:
    carta_computador = sortear_carta()

# Mostra a carta do jogador
print("\nSua carta Ã©:")
mostrar_carta(carta_jogador)

# Jogador escolhe atributo
atributo = input("\nEscolha um atributo para disputar (forÃ§a, velocidade, magia): ").lower()

# ValidaÃ§Ã£o
while atributo not in ["forÃ§a", "velocidade", "magia"]:
    atributo = input("Atributo invÃ¡lido. Escolha (forÃ§a, velocidade, magia): ").lower()

# Mostra carta do computador
print("\nCarta do computador:")
mostrar_carta(carta_computador)

# ComparaÃ§Ã£o
valor_jogador = carta_jogador[atributo]
valor_computador = carta_computador[atributo]

print(f"\nVocÃª escolheu: {atributo.upper()}")
print(f"Sua pontuaÃ§Ã£o: {valor_jogador}")
print(f"PontuaÃ§Ã£o do computador: {valor_computador}")

# Resultado
if valor_jogador > valor_computador:
    print("\nğŸ‰ VocÃª venceu a rodada!")
elif valor_jogador < valor_computador:
    print("\nğŸ’¥ VocÃª perdeu! O computador venceu.")
else:
    print("\nâš”ï¸ Empate!")

print("\n=== Fim da rodada ===")
